</nav>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Welcome <span class="member-name"></span></h2>

        <h2>Add an Application</h2>
        <form class="addnew" action="/displayApps" method="POST">

          <div class="form-group" >
              <label for="date">Date Applied</label>
              <textarea class="form-control" id="date" name="date"></textarea>
          </div>
          {{hello}}
          <div class="form-group">
              <label for="companyName">Company Name</label>
              <select class="form-control" id="companyName" name="companyName">

              </select>
       </div>


                   <div class="form-group" >
                   <label for="job">Job Title</label>
                   <textarea class="form-control" id="jobTitle" name="jobTitle"></textarea>
               </div>

                   <div class="form-group" >
                   <label for="status">Status</label>
                   <textarea class="form-control" id="status" name="status"></textarea>
               </div>

               <div class="form-group" >
               <label for="nextStep">Next Step</label>
               <textarea class="form-control" id="nextStep" name="nextStep"></textarea>
           </div>

                   <button type="submit" class="btn btn-primary">Submit</button>
           </form>

      </div>
    </div>

    <div class="col-md-12 app-container">
      {{#each application}}
      {{#if this.user_id}}

      <tr>
        <td>{{this.date}}</td>
        <td>{{this.companyName}}</td>
        <td>{{this.jobTitle}}</td>
        <td>{{this.stage}}</td>
        <td>{{this.nextAction}}</td>
      </tr>

      {{/if}}
      {{/each}}
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="js/members.js"></script>
